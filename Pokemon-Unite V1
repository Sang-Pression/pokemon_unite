        // Fonction pour afficher les Pokémon
        function displayPokemon(pokemonList) {
            const container = document.getElementById('pokemon-container');
            container.innerHTML = '';
            
            pokemonList.forEach(pokemon => {
                const card = document.createElement('div');
                card.className = 'pokemon-card';
                
                // Header
                const header = document.createElement('div');
                header.className = 'pokemon-header';
                
                const name = document.createElement('h2');
                name.textContent = pokemon.name;
                
                const rolesContainer = document.createElement('div');
                pokemon.roles.forEach(role => {
                    const roleTag = document.createElement('span');
                    roleTag.className = `role-tag ${role}`;
                    roleTag.textContent = role === 'attacker' ? 'Attaquant' : 
                                          role === 'defender' ? 'Défenseur' :
                                          role === 'speedster' ? 'Speedster' :
                                          role === 'supporter' ? 'Support' : 'All-Rounder';
                    rolesContainer.appendChild(roleTag);
                });
                
                const rangeTag = document.createElement('span');
                rangeTag.className = `role-tag ${pokemon.range}`;
                rangeTag.textContent = pokemon.range === 'ranged' ? 'Distance' : 'Mêlée';
                rolesContainer.appendChild(rangeTag);
                
                header.appendChild(name);
                header.appendChild(rolesContainer);
                
                // Body
                const body = document.createElement('div');
                body.className = 'pokemon-body';
                
                const buildTitle = document.createElement('h3');
                buildTitle.textContent = 'Build Optimal';
                
                const moves = document.createElement('p');
                moves.innerHTML = `<strong>Capacités:</strong> ${pokemon.build.moves.join(' / ')}`;
                
                const battleItem = document.createElement('p');
                battleItem.innerHTML = `<strong>Objet de combat:</strong> ${pokemon.build.battleItem}`;
                
                // Held Items
                const heldSection = document.createElement('div');
                heldSection.className = 'build-section';
                
                const heldTitle = document.createElement('h3');
                heldTitle.textContent = 'Objets tenus';
                
                const heldList = document.createElement('ul');
                pokemon.build.heldItems.forEach(item => {
                    const li = document.createElement('li');
                    li.textContent = item;
                    heldList.appendChild(li);
                });
                
                heldSection.appendChild(heldTitle);
                heldSection.appendChild(heldList);
                
                // Emblems
                const emblemSection = document.createElement('div');
                emblemSection.className = 'build-section';
                
                const emblemTitle = document.createElement('h3');
                emblemTitle.textContent = 'Médailles recommandées';
                
                const emblemList = document.createElement('ul');
                const emblemLi = document.createElement('li');
                emblemLi.textContent = pokemon.build.emblems;
                emblemList.appendChild(emblemLi);
                
                emblemSection.appendChild(emblemTitle);
                emblemSection.appendChild(emblemList);
                
                // Tips
                const tipsSection = document.createElement('div');
                tipsSection.className = 'build-section';
                
                const tipsTitle = document.createElement('h3');
                tipsTitle.textContent = 'Conseils de gameplay';
                
                const tips = document.createElement('p');
                tips.textContent = pokemon.tips;
                
                tipsSection.appendChild(tipsTitle);
                tipsSection.appendChild(tips);
                
                // Assemblage
                body.appendChild(buildTitle);
                body.appendChild(moves);
                body.appendChild(battleItem);
                body.appendChild(heldSection);
                body.appendChild(emblemSection);
                body.appendChild(tipsSection);
                
                card.appendChild(header);
                card.appendChild(body);
                
                container.appendChild(card);
            });
        }

        // Initial display
        displayPokemon(pokemonData);

        // Search functionality
        document.querySelector('.search-bar').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const filtered = pokemonData.filter(pokemon => 
                pokemon.name.toLowerCase().includes(searchTerm)
            );
            displayPokemon(filtered);
        });

        // Filter by role
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const role = this.dataset.role;
                if (role === 'all') {
                    displayPokemon(pokemonData);
                } else {
                    const filtered = pokemonData.filter(pokemon => 
                        pokemon.roles.includes(role)
                    );
                    displayPokemon(filtered);
                }
            });
        });

        // Update date
        document.getElementById('update-date').textContent = new Date().toLocaleDateString('fr-FR');
    </script>
</body>
</html>
